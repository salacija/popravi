
@{
    ViewData["Title"] = "Login";
    @model Popravi.Business.DataTransfer.User.LoginUserDto
}

<h1>Prijava</h1>

@if (TempData["success"] != null)
{
    <div class="alert alert-success">
        <strong> @TempData["success"] </strong>
    </div>
}

@if (TempData["error"] != null)
{
    <div class="alert alert-danger">
        <strong> @TempData["error"] </strong>
    </div>

}

<form method="post" asp-action="Login">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group row">
        <label asp-for="UserName" class="col-md-4 col-form-label text-md-right">Korisnicko ime</label>
        <div class="col-md-6">
            <input asp-for="UserName" type="text" id="user_name" class="form-control" name="UserName">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Password" class="col-md-4 col-form-label text-md-right">Sifra</label>
        <div class="col-md-6">
            <input asp-for="Password" type="password" id="password" class="form-control" name="Password">
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="col-md-6 offset-md-4">
        <button type="submit" class="btn btn-primary">
            Uloguj se
        </button>
    </div>
</form>

