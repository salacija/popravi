@model Popravi.Mvc.Areas.Admin.Models.EditLocationViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/Partials/_Layout.cshtml";
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
}

<h1>Izmena lokacije</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="@Model.Location.Id" class="form-control" /> <!-- Hidden polje u kom cuvamo id -->
            </div>
            <div class="form-group">
                <label asp-for="@Model.Location.Name" class="control-label"></label>
                <input asp-for="@Model.Location.Name" name="Name" class="form-control" />
                <span asp-validation-for="@Model.Location.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Cities" class="control-label"></label>
                <select name="CityId" id="cityId" class="form-control">
                    <option value="0">Izaberite...</option>
                    @foreach (var c in Model.Cities)
                    {
                        @if (c.Name == Model.Location.CityName)
                        {
                            <option selected value="@c.Id">@c.Name</option>
                        }
                        else
                        {
                            <option value="@c.Id">@c.Name</option>
                        }
                    }
                </select>
                <span asp-validation-for="@Model.Cities" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Sacuvaj izmene" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Povratak na Listu</a>
</div>